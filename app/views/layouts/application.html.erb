<!DOCTYPE html>
<html>
	<head>
	  <title>Luggish</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
	  	  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/ui-lightness/jquery-ui.css"></script>
	</head>
	<body>

		<%= render 'layouts/header' %>

		<div class="container">
			<div class="container-space-top">
			<div class="user_nav">
				<ul class="nav pull-right" style="font-weight: bold; font-size: 16px"><% if current_user %>
					Logged in as <%= current_user.email %></ul>
				<% end %>
			</div>
			<% flash.each do |name, msg| %>
			<div class="alert">
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		</div>
			<% end %>
				<%= yield %>
			</div>
 		</div>
	</body>

</html>
