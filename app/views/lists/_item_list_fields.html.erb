<div class="nested-fields">
		<div class="field newlist">
			<%= f.number_field :quantity, in: 1...99, :class => "qty_size" %>
		</div>
		
		<div class="field newlist">
			<% if f.object.is_system_item? %>
				<div class="item_name"><%= f.object.name %></div>
				<%= f.hidden_field :name %>
			<% else %>
				<%= f.text_field :name %>
			<% end %>
		</div>

		<div class="field newlist">
			
			<%= f.text_field :note, :placeholder => "Notes" %>
		</div>
		<%= link_to_remove_association "x", f, :class => "close" %>
	</div>