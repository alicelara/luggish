<div class="user_form">
<h2>Log in</h2>

<%= form_tag sessions_path do %>
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	<div class="field">
		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
		<%= label_tag :remember_me %>
	</div>
	<div class="btn "><%= submit_tag "Log in" %>
	</div>
	<% end %>
<%= link_to "Forgot Password?", "#", :class => "toggle link_forgot" %>
<div class="hide">
<h4>Forgot password?</h4>
<%= render 'forgot_password_form' %>
</div>
</div>

